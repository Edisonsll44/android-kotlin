<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/lbl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text=""
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Selecciona la materia a evaluar." />

        <RadioGroup
            android:id="@+id/rdg_signatures"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdb_matemathics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matemáticas" />

            <RadioButton
                android:id="@+id/rdb_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingles" />

            <RadioButton
                android:id="@+id/rdb_informatic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informatica" />

            <RadioButton
                android:id="@+id/rdb_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historia del Ecuador" />

            <RadioButton
                android:id="@+id/rdb_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aplicaciones móviles" />

            <TextView
                android:id="@+id/lbl_counter"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="Nuevo intento" />
        <Button
            android:id="@+id/btn_qualifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Ver calificaciones" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>